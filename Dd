#!/bin/bash

# Set the necessary variables
remote_user="username" # Replace with the remote server's username
remote_host="remote.server.com" # Replace with the remote server's hostname or IP address
remote_file="/path/to/remote/file" # Replace with the path to the remote file you want to copy
local_file="/path/to/local/file" # Replace with the path where you want to save the file locally
password="password123" # Replace with the password for the remote user

# Use the scp command to copy the remote file to the local machine
sshpass -p "$password" scp "$remote_user@$remote_host:$remote_file" "$local_file"

# Check the exit code to see if the copy was successful
if [ "$?" -eq 0 ]; then
    echo "File copied successfully."
else
    echo "File copy failed."
fi
